<openerp>

    <record model="ir.ui.view" id="crm_claim_categ_name_form_view">
        <field name="model">crm.claim</field>
        <field name="inherit_id" ref="crm_claim_rma.crm_claim_rma_form_view"/>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <field name="categ_id" string="Name" options="{'no_create': True, 'no_open': True}"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="crm_claim_categ_as_name_form_view">
        <field name="model">crm.claim</field>
        <field name="inherit_id" ref="crm_claim.crm_case_claims_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="replace">
                <field name="name" invisible="1"/>
            </field>
        </field>
    </record>

</openerp>
