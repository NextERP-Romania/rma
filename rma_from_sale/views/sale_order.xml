<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- INHERITED VIEW FOR THE OBJECT : sale_order -->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">rma.sale_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//group[@name='sales_person']/.." position="inside">
                    <newline/>
                    <group name="claims" colspan="2" col="2">
                        <separator string="Claims" colspan="2"/>
                        <field name="claim_ids" colspan="2" nolabel="1"/>
                    </group>
                </xpath>
            </data>
        </field>
    </record>

</odoo>
