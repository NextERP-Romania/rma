<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    
    <template id="rma_warranty_group.report_rmag_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
			<t t-set="rmag" t-value="doc"/>

                    <h1 class="mb-0">
                        <span>
                            RMA Group Order - <span t-field="rmag.name" />
                        </span>
                        <span class="float-right">
                            <t t-if="rmag.state in ['resolved']">
                                <span
                                    class="small text-success orders_label_text_align"
                                >
                                    <i class="fa fa-fw fa-check" />
                                    <b>
                                        <span t-field="rmag.state" />
                                    </b>
                                </span>
                            </t>
                            <t t-elif="rmag.state in ['cancelled']">
                                <span class="small text-danger orders_label_text_align">
                                    <i class="fa fa-fw fa-times" />
                                    <b>
                                        <span t-field="rmag.state" />
                                    </b>
                                </span>
                            </t>
                            <t t-else="">
                                <span class="small text-info orders_label_text_align">
                                    <i class="fa fa-fw fa-clock-o" />
                                    <b>
                                        <span t-field="rmag.state" />
                                    </b>
                                </span>
                            </t>
                        </span>
                    </h1>

            
                  <section  style="page-break-inside: auto;" class="mt32">
                    <div id="general_information">
                        <div class="row mt4">
                            <div class="col-12 col-md-6 mb-4 mb-md-0">
                                <h4>
                                    <strong>Customer:</strong>
                                </h4>
                                <div class="row">

                                    <div class="col pl-sm-0">
                                        <address
                                            t-field="rmag.partner_id"
                                            t-options='{"widget": "contact", "fields": ["name", "email", "phone"]}'
                                        />
                                    </div>
                                </div>
                            </div>

                        </div>
                        <h5>
                        <div class="row mt32" id="Sale_order">
                            <div class="col-6 ">
                                <div t-if="rmag.order_id" class="row mb-2 mb-sm-1">
                                    <div class="col-4">
                                        <strong>Sale Order</strong>
                                    </div>
                                    <div class="col-8">
                                        <span t-field="rmag.order_id.name" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="row mb-2 mb-sm-1">
                                    <div class="col-4"> <!-- <div class="col-12 col-sm-4"> -->
                                        <strong>RMA Date</strong>
                                    </div>
                                    <div class="col-8">
                                        <span  t-esc="rmag.date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        </h5>
                    </div>
					

		<!-- *************TABLE WITH RMA LINES ************************** -->
                    <section  style="page-break-inside: auto;" class="mt32">
                    	<t t-call='rma_warranty_group.rma_lines'/> 
                    </section >
         <!-- *********return message(((((((((( -->
					</section>
					 <section  style="page-break-inside: auto;" class="mt32">
					 <br /><br />
					 <div class="well">
						<h2><b><pre t-esc="rma_return_message"/></b></h2>
					</div>
					</section>


		</t>            
    </template>

	

    <template id="report_rmag">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="rma_warranty_group.report_rmag_document" t-lang="doc.partner_id.lang" />
            </t>
        </t>
    </template>
</odoo>
