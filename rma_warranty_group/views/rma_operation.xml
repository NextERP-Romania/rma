<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <menuitem
        id="rma_operation_menu"
        parent="rma.rma_configuration_menu"
        name="RMA Operations"
        sequence="30"
    />

   <record id="rma_operation_tree" model="ir.ui.view">
        <field name="name">rma_operation_tree</field>
        <field name="model">rma.operation</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="rma_operation" model="ir.actions.act_window">
        <field name="name">rma_operation</field>
        <field name="res_model">rma.operation</field>
        <field name="view_mode">tree,form</field>
        <field name="context" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to add a new rma.operation
            </p>
        </field>
    </record>
     <record id="rma_operation_menu" model="ir.ui.menu">
        <field name="action" ref="rma_operation" />
    </record>

</odoo>
