<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Record Rules -->
    <record id="rma_rule_user_own" model="ir.rule">
        <field name="name">Personal RMAGs </field>
        <field name="model_id" ref="model_rma_group" />
        <field
            name="domain_force"
        >['|',('user_id','=',user.id),('user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('rma.rma_group_user_own'))]" />
    </record>
    <record id="rma_rule_user_all" model="ir.rule">
        <field name="name">All RMAGs</field>
        <field name="model_id" ref="model_rma_group" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('rma.rma_group_user_all'))]" />
    </record>
    <!-- RMA model rules for portal users -->
    <record id="rma_rule_portal" model="ir.rule">
        <field name="name">RMAG portal users</field>
        <field name="model_id" ref="model_rma_group" />
        <field
            name="domain_force"
        >[('message_partner_ids', 'child_of', [user.partner_id.commercial_partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]" />
    </record>
    <!-- Multi-Company Rules -->
    <record id="rma_rule_multi_company" model="ir.rule">
        <field name="name">RMAG multi-company</field>
        <field name="model_id" ref="model_rma_group" />
        <field name="global" eval="True" />
        <field
            name="domain_force"
        >['|',('company_id','=',False),('company_id','in',company_ids)]</field>
    </record>
</odoo>
